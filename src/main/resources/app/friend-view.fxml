<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.FriendsController">
   <center>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="389.0" style="-fx-background-color: #125665;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="457.0" spacing="10.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="120.0" text="Nombre de usuario:" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets right="-20.0" />
                     </padding></Label>
                  <TextField fx:id="usernameTextField">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="369.0" />
            <Button fx:id="addFriendButton" mnemonicParsing="false" onAction="#handleAddFriendButtonAction" style="-fx-background-color: #e75334;" text="Agregar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
