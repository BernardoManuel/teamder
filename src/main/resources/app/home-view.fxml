<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="homeView" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.HomeController">
   <left>
      <BorderPane fx:id="sideMenu" prefHeight="200.0" prefWidth="240.0" style="-fx-background-color: #125665; -fx-faint-focus-color: transparent;" BorderPane.alignment="CENTER">
         <top>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" style="-fx-spacing: 5;" BorderPane.alignment="CENTER">
               <children>
                  <Pane onMouseClicked="#placePlaceholder" prefHeight="40.0" prefWidth="80.0">
                     <children>
                        <Text fx:id="userLogged" fill="WHITE" layoutY="26.0" text="User">
                           <font>
                              <Font name="System Bold Italic" size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </Pane>
                  <Button layoutX="14.0" layoutY="5.0" mnemonicParsing="false" onMouseClicked="#openRoomCreator" style="-fx-background-color: #e75334;" text="+ Sala" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin></HBox>
         </top>
         <center>
            <ScrollPane fitToWidth="true" prefHeight="360.0" prefWidth="241.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="chatsList" minHeight="0.0" minWidth="0.0" style="-fx-spacing: 5px;" />
               </content>
            </ScrollPane>
         </center>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </BorderPane>
   </left>
   <right>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <VBox fx:id="friendList" prefHeight="400.0" prefWidth="243.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="248.0" style="-fx-background-color: #125665;" text="              Lista de Amigos" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <bottom>
            <Button  mnemonicParsing="false" onMouseClicked="#openFriendsView" style="-fx-background-color: #e75334;" styleClass="bi bi-person-plus-fill" text="+ Amigos" textFill="WHITE" BorderPane.alignment="CENTER_RIGHT">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </bottom>
      </BorderPane>
   </right>
</BorderPane>
